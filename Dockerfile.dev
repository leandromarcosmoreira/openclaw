FROM node:22-alpine

# Install build dependencies
RUN apk add --no-cache python3 make g++ git cmake bash

# Set working directory
WORKDIR /app

# Install pnpm globally
RUN npm install -g pnpm

# Copy package files first
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./

# Install dependencies - ignore scripts to avoid native module build issues
RUN pnpm install --ignore-scripts

# Copy source code
COPY . .

# Build the project (may have warnings for native modules)
RUN pnpm build || true

# Build UI assets (required for Control UI)
RUN cd ui && pnpm install --ignore-scripts && pnpm build || true
# Create symlink for Control UI to find assets
RUN ln -sf /app/dist /app/ui/dist

# Expose port
EXPOSE 18789

# Development command using the correct gateway:dev script with allow-unconfigured
CMD ["sh", "-c", "OPENCLAW_SKIP_CHANNELS=1 CLAWDBOT_SKIP_CHANNELS=1 node scripts/run-node.mjs --dev gateway --allow-unconfigured"]
