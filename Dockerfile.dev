FROM node:22-alpine

# Install build dependencies
RUN apk add --no-cache python3 make g++ git cmake bash

# Set working directory
WORKDIR /app

# Install pnpm globally
RUN npm install -g pnpm

# Copy package files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./

# Install dependencies
RUN pnpm install --ignore-scripts

# Copy source code
COPY . .

# Build the project
RUN pnpm build

# Expose port
EXPOSE 18789

# Development command using the correct gateway:dev script with allow-unconfigured
CMD ["sh", "-c", "OPENCLAW_SKIP_CHANNELS=1 CLAWDBOT_SKIP_CHANNELS=1 node scripts/run-node.mjs --dev gateway --allow-unconfigured"]
